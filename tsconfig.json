{
  "extends": "tsconfig-jc",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": false
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
